<%-include('cabeca.ejs')%>
<table class="table table-hover rounded">
    <tr>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Tags</th>
        <th>Foto</th>
        <th>Data</th>
        <th>Status</th>
        <th>Editar</th>
        <th>Deletar</th>
    </tr>
    <% postH.forEach(function(post){ %>
    <tr>
        <td><%=post.titulo%></td>
        <td><%=post.texto%></td>
        <td><%=post.tags%></td>
        <td><%=post.status%></td>
        <td>
            <img class="img-thumbnail img-fluid" src="/<%=post.foto%>" width="200" alt="Foto do perfil">
        </td>
        <td>
            <a href="/postupdate/<%=post._id%>">Editar</a>
        </td>
        <td>
            <a href="/postdelete/<%=post._id%>">Deletar</a>
        </td>
    </tr>
    <%})%>
</table>

<%-include('rodape.ejs')%>