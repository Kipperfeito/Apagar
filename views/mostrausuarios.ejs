<%-include('cabecalho.ejs')%>
<table class="table table-hover rounded">
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Foto</th>
        <th>Editar</th>
        <th>Deletar</th>
    </tr>
    <% Usuarios.forEach(function(usuario){ %>
    <tr>
        <td><%=usuario.nome%></td>
        <td><%=usuario.email%></td>
        <td>
            <img class="img-thumbnail img-fluid" src="/<%=usuario.foto%>" width="200" alt="Foto do perfil">
        </td>
        <td>
            <a href="/editarusuario/<%=usuario._id%>">Editar</a>
        </td>
        <td>
            <a href="/deletarusuario/<%=usuario._id%>">Deletar</a>
        </td>
    </tr>
    <%})%>
</table>

<%-include('rodape.ejs')%>